<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_infomascotas"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <ImageView

            android:id="@+id/iv_foto"
            android:layout_width="410dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:src="@drawable/perrito2"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_iconohueso"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ico_huesoblanco"/>
            <TextView
                android:id="@+id/txt_nombre"
                android:layout_width="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:gravity="center_vertical"
                android:layout_marginRight="46dp"
                android:text="Ice Cube"
                />
            <TextView
                android:id="@+id/txt_contador"
                android:layout_width="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:gravity="left"
                android:text="12"
                />
            <ImageView
                android:id="@+id/iv_iconohuesoamarillo"
                android:layout_marginRight="46dp"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ico_huesoamarillo"
                tools:ignore="ExtraText" />
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>